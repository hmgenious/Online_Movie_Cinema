<body id="page1">
<!-- START PAGE SOURCE -->
<div class="tail-top">
  <div class="tail-bottom">
    <div id="main">
      
      <div id="content">
        <div id="slogan">
          <div class="image png"></div>
          <div class="inside">
          </div>
        </div>
        <div class="box">
          <div class="border-right">
            <div class="border-left">
                <div class="box">
          <div class="border-right">
            <div class="border-left">
              <div class="inner">
                <h3>Welcome to <b>Cinema</b> <span>World</span></h3>
                  <form action="/Home/log" method="get">
                    User Name:<input type="text" name="u1"/><br>
                    Password: <input type="text" name="p1"/><br>
                    <input type="submit" value="Log In" />
                    </form>
                  <a href="/Home/registration" class="active">Sign Up</a>

                 </div>
            </div>
          </div>
        </div>
              </div>
            </div>
          </div>
        </div>
        <div class="content">
          <h3>Fresh <span>Movies</span></h3>
         
            <ul class="movies">
            
               @foreach(var item in Model)
               { 
                   <li>
                <h4>@item.Name </h4>
              <img src="@Url.Content("~/Files/"+item.Image)" alt="" />
              <p>@item.Description</p>
              <div class="wrapper"><a href="#" class="link2"><span><span>Read More</span></span></a></div>
               </li>
                }
                   
                
            
            <li class="clear">&nbsp;</li>
          </ul>
               
  
         
        </div>
      </div>
      <div id="footer">
        <div class="left">
          <div class="right">
            <div class="footerlink">
                            <div style="clear:both;"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

